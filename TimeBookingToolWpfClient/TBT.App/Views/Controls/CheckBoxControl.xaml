<UserControl x:Class="TBT.App.Views.Controls.CheckBoxControl"
             x:Name="this"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBT.App.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" SharedSizeGroup="TextContolLabel"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding ElementName=this, Path=Label, Mode=TwoWay}" Margin="2 0 2 0" Grid.Column="0" HorizontalAlignment="Right"/>
        <CheckBox IsChecked="{Binding ElementName=this, Path=IsChecked, Mode=TwoWay}" Margin="2 0 0 0" Grid.Column="1" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
