<UserControl x:Class="TBT.App.Views.Controls.EditCustomerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TBT.App.Views.Controls"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid VerticalAlignment="Bottom"
              Grid.Row="1">
            <StackPanel Orientation="Horizontal" Margin="20 0" HorizontalAlignment="Center">
                <local:TextControl Label="Customer name" Text="{Binding Path=EditingCustomersName, Mode=TwoWay}"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Height="25" Margin="10 0 10 0" Content="Save" Command="{Binding SaveCommand}" Template="{StaticResource HyperlinkButtonTemplate}"/>
        </StackPanel>
    </Grid>
</UserControl>
